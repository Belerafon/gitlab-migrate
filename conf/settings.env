# ========== CONFIG ==========
# Основные
CONTAINER_NAME="gitlab"
DATA_ROOT="/srv/gitlab"
HOST_IP="0.0.0.0"
PORT_SSH=222
PORT_HTTPS=444
PORT_HTTP=81

# Путь к распакованным файлам из 7z (проверьте!)
#   gitlab_config.tar
#   <TS>_YYYY_MM_DD_<BASEVER>_gitlab_backup.tar[.gz]
BACKUPS_SRC="/root/migration/extracted/2025_09_gitlab/backups"

# Идти ли до 17.x (yes/no)
DO_TARGET_17="yes"

# Файл состояния (для докаток/перезапуска)
STATE_FILE="/root/gitlab_upgrade_state.env"

# Паузы/таймауты
WAIT_AFTER_START=45
WAIT_BETWEEN_STEPS=60
READY_TIMEOUT=300
# Интервал между сообщениями об ожидании готовности (сек)
READY_STATUS_INTERVAL=30
# Максимальное ожидание PostgreSQL (сек)
POSTGRES_READY_TIMEOUT=300
# Интервал проверки фоновых миграций (сек)
BACKGROUND_WAIT_INTERVAL=60
# Как часто печатать подробный статус ожидания (итерации, 0=только первый раз)
BACKGROUND_WAIT_REPORT_EVERY=5
# Максимальный интервал между повторными сообщениями ожидания (сек)
BACKGROUND_WAIT_PROGRESS_INTERVAL=300
# ============================
